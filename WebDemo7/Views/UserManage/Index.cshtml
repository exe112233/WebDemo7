
@{
    Layout = null;
    WebDemo7.publics.MyClass.UserManage userManage = new WebDemo7.publics.MyClass.UserManage();
    List<WebDemo7.Models.User> us = userManage.getAllUser();
}

<!DOCTYPE html>
<link href="../publics/Ext/theme-triton/resources/theme-triton-all.css" rel="stylesheet" type="text/css">
<link href="../publics/css/mycss.css" rel="stylesheet" type="text/css">
<script src="../publics/Ext/ext-all.js"></script>
<script>
    function addUsersFunction() {
        var win = new Ext.Window({
            title: ' 用户注册',
            icon:'../publics/Images/新增.png',
            id: 'addUsers',
            width: 400,
            height: 300,
            layout: 'form',
            items:[
                { xtype: 'textfield', id: 'username', fieldLabel: '用户名' },
                { xtype: 'textfield', id: 'pass',inputType:'password', fieldLabel: '密码' },
                { xtype: 'textfield', id: 'email', fieldLabel: '邮箱' }
                ],
            buttons: [
                { text: '注册', icon: '../publics/Images/保存.png'},
                { text: '关闭', icon: '../publics/Images/打开.png'}
            ]
        });
        win.show();
    }
</script>
